{
  "extends": [
    "strongloop",
    "plugin:mocha/recommended"
  ],
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "mocha": true
  },
  "rules": {
    "max-len": ["off"],
    "no-param-reassign": ["off"],
    "import/prefer-default-export": ["off"],
    "global-require": ["off"]
  }
}
